<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewTopicDetailActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/topicImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="#88000000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topicTitleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="토론 주제가 나올 자리"
                android:textColor="@color/white"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/firstSideTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="천 진영"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/firstSideVoteCountTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22표"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/voteToFirstSideBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="투표하기"/>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VS"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                   android:textColor="@color/white"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/secondSidetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="두 번째 진영"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/ssecondSideVoteCountTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10표"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/voteToSecondSideBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="투표하기"/>

                </LinearLayout>




            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/replyListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/wrightReplyBtn"
            android:layout_gravity="right|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="의견 등록하기"/>

    </FrameLayout>

</LinearLayout>